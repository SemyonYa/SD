@using SD2.Models.View
@model CreateClientViewModel

<form>

    <h2> Create Client </h2>
    <label>
        First Name
        <input type="text" asp-for="FirstName" />
    </label>

    <label>
        Last Name
        <input type="text" asp-for="LastName" />
    </label>

    <label>
        Age
        <input type="number" asp-for="Age" />
    </label>

    <label>
        Is Active
        <input type="checkbox" asp-for="IsActive" />
    </label>

    <button type="submit"> Create </button>

</form>